html
	head
		meta(charset='UTF-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		title Sora Book
		link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css")
		link(rel="stylesheet", href="/styles/custom.css")
		block scripts
			script(src='/styles/modal.js')
	body
		.page
			header.nav-head
				nav.nav-menu
					ul.nav-book
						a(type="button", class="menu-btn", href='/home')
							li.item.item-lr Home
						li.item.item-search Register
						li.item.item-lr
							.icon-vip
								img(src='https://4.imimg.com/data4/TY/DA/ANDROID-57986691/product-500x500.jpeg', alt='')

			.container-book.p-4.justify-content-center.d-flex
				.col-12.col-md-6.col-lg-6
					if errors
						each error in errors
							.alert.alert-danger= error

					form.form-group.m-auto(method="POST")
						label(for="name") Name
						input#name.input-group.form-control.mb-3(name="name" type="name", value=values ? values.name : "", required)

						label(for="email") Email
						input#email.input-group.form-control.mb-3(name="email" type="email", value=values ? values.email : "", required)

						label(for="password") Password
						input#password.input-group.form-control.mb-3(name="password", type="password", value=values ? values.password : "")


						button.btn.btn-primary.btn-outline-primarys Create

					.mt-3
						a(href="/auth/login") Log in